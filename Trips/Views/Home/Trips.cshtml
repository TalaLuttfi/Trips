<form asp-controller="Home" asp-action="Search" method="get" class="my-3">
    <div class="row">
        <div class="col-md-4 form-group">
            <label for="destinationDropdown" class="fw-bold" style="color: blue;">Select Destination:</label>
            <select id="destinationDropdown" name="destination" class="form-control">
                <option value="">All Destinations</option>
                @foreach (var destination in ViewBag.Destinations.Items)
                {
                    <option value="@destination">@destination</option>
                }
            </select>
        </div>
        <div class="col-md-4 form-group align-self-end">
            <!-- Add align-self-end class here -->
            <label for="categoryDropdown" class="fw-bold" style="color: blue;">Select Category:</label>
            <select id="categoryDropdown" name="category" class="form-control">
                <option value="">All Categories</option>
                @foreach (var category in ViewBag.Categories.Items)
                {
                    <option value="@category">@category</option>
                }
            </select>
        </div>
        <div class="col-md-4 form-group align-self-end">
            <!-- Add align-self-end class here -->
            <button class="btn btn-primary btn-block fw-bold" type="submit">Search</button>
        </div>
    </div>
</form>

<h1 style="margin-top:20px; margin-left:20px; font-size: 40px;">Trips</h1>
<hr />

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card" style="margin-left:10px; margin-right:10px;">
                <img src="~/Images/@item.ImagePath" class="card-img-top" style="max-height: 200px; object-fit: cover;">
                <div class="card-body">
                    <h5 class="card-title">@item.TripName</h5>
                    <p class="card-text">Destination :@item.Destination</p>
                    <p class="card-text">Start Date: @item.StartDate</p>
                    <p class="card-text">End Date: @item.EndDate</p>
                    <p class="card-text">Cost: @item.Cost</p>
                    <a asp-controller="Home" asp-action="MoreInfo" asp-route-Id="@item.Id" class="btn btn-primary">More Information</a>
                </div>
            </div>
        </div>
    }
</div>
